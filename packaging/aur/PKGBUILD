# Maintainer: d3xfoo <d3xfoo@example.com>
pkgname=wimg
pkgver=1.0.0
pkgrel=1
pkgdesc="A fast and efficient command-line image processing tool"
arch=('x86_64' 'aarch64')
url="https://github.com/d3xfoo/wimg"
license=('MIT')
depends=('glibc')
makedepends=('go' 'git')
source=("$pkgname-$pkgver.tar.gz::https://github.com/d3xfoo/wimg/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')

prepare() {
	cd "$pkgname-$pkgver"
	go mod download
}

build() {
	cd "$pkgname-$pkgver"
	export CGO_ENABLED=1
	export CGO_LDFLAGS="$LDFLAGS"
	go build -o wimg -ldflags="-s -w" cmd/wimg/main.go
}

check() {
	cd "$pkgname-$pkgver"
	go test ./...
}

package() {
	cd "$pkgname-$pkgver"
	install -Dm755 wimg "$pkgdir/usr/bin/wimg"
	install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
	install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
}
